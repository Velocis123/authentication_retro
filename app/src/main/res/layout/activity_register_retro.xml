<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.RegisterRetro">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/ic_launcher_background"


               android:layout_marginTop="100dp" android:layout_alignParentTop="true"
               android:layout_alignParentStart="true" android:layout_marginStart="150dp"
               android:id="@+id/imG_logo"

               android:foregroundGravity="top"
    />

    <EditText android:layout_width="229dp" android:layout_height="wrap_content"
              android:hint="Enter Your Email"
              android:id="@+id/edt_register_email"
              android:layout_below="@+id/imG_logo"
              android:layout_marginTop="121dp"
              android:layout_marginLeft="130dp"

              android:layout_alignParentStart="true" android:layout_marginStart="89dp"
              android:gravity="center"/>

    <EditText android:layout_width="229dp" android:layout_height="wrap_content"
              android:hint="Enter Your Password"
              android:id="@+id/edt_register_pass"
              android:layout_below="@+id/edt_register_email"            android:layout_marginTop="20dp"
              android:layout_marginLeft="130dp"

              android:layout_alignParentStart="true" android:layout_marginStart="89dp"
              android:gravity="center"/>


    <EditText android:layout_width="229dp" android:layout_height="wrap_content"
              android:hint="Enter Your Username"
              android:id="@+id/edt_register_userame"
              android:layout_below="@+id/edt_register_pass"
              android:layout_marginTop="20dp"
              android:layout_marginLeft="130dp"

              android:layout_alignParentStart="true" android:layout_marginStart="89dp"
              android:gravity="center"/>

    <RadioGroup android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/radio1"
                android:layout_below="@+id/edt_register_userame"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="20dp"
    >


        <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:text="Male"
                     android:id="@+id/male"/>
        <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:text="Female"/>


    </RadioGroup>


    <ImageView android:layout_width="50dp" android:layout_height="50dp"
               android:id="@+id/btn_regist"
               android:layout_below="@+id/radio1"
               android:layout_marginTop="40dp"

               android:src="@drawable/ic_launcher_background"
               android:foregroundGravity="center"


               android:layout_alignParentStart="true" android:layout_marginStart="176dp"/>



</RelativeLayout>